<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/profiled1"
    android:layout_height="match_parent"
    tools:context=".Profiles">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:text="Email"
        android:layout_marginTop="220dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:text="Admin@gmail.com"
        android:layout_marginTop="10dp"
        android:textColor="@color/header"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:text="Name"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:text="Admin"
        android:layout_marginTop="10dp"
        android:textColor="@color/header"
        android:textSize="18dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"
        android:text="Phone"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="60dp"

        android:text="+627 7287 7283 8191"
        android:layout_marginTop="10dp"
        android:textColor="@color/header"
        android:textSize="20dp"
        tools:ignore="MissingConstraints" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <ImageView
            android:id="@+id/backs"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_home"
            android:paddingLeft="82dp"></ImageView>
        <ImageView
            android:id="@+id/profiled3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:tint="@color/header"
            android:src="@drawable/ic_baseline_person_24"
            android:paddingLeft="184dp"></ImageView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>